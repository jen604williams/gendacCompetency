@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<RadzenButton Text="Click Me" Click="@OnClick" />
@code {
    void OnClick()
    {
        Console.WriteLine("Button clicked!");
    }
}

<RadzenDataGrid Data="@employees" TItem="Employee" ColumnWidth="200px" AllowPaging="true" PageSize="5" AllowSorting="true">
    <Columns>
        <RadzenDataGridColumn TItem="Employee" Property="Id" Title="ID" />
        <RadzenDataGridColumn TItem="Employee" Property="Name" Title="Name" />
        <RadzenDataGridColumn TItem="Employee" Property="Position" Title="Position" />
    </Columns>
</RadzenDataGrid>

@code {
    List<Employee> employees = new()
    {
        new Employee { Id = 1, Name = "Alice", Position = "Manager" },
        new Employee { Id = 2, Name = "Bob", Position = "Developer" },
        new Employee { Id = 3, Name = "Charlie", Position = "Designer" }
    };

    public class Employee
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string Position { get; set; }
    }
}

